<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/item_hashtag"
        android:layout_margin="5dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:id="@+id/imgHashtag"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Hashtag"
            android:textSize="20sp"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:id="@+id/txtHashtagTitle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pengguna"
            android:id="@+id/txtJumlahPenggunaHashtag"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="35dp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="320dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="80dp"
            android:text="Clola"
            android:textSize="15sp" />
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="format pengguna"
            android:id="@+id/txtFormatHashtag"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>